<div class="auth-page">
  <h1>Sign in</h1>

  <%= form_with url: session_path, method: :post, html: { class: "form-panel" } do %>
    <div class="field">
      <%= label_tag :email, "Email" %>
      <%= email_field_tag :email %>
    </div>

    <div class="field">
      <%= label_tag :password, "Password" %>
      <%= password_field_tag :password %>
    </div>

    <div class="actions">
      <%= submit_tag "Sign in" %>
    </div>
  <% end %>
</div>
